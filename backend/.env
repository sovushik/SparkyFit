# Application Configuration
APP_NAME="SparkyFit"
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Moscow

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sparkyfit
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
JWT_BLACKLIST_GRACE_PERIOD=300

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=86400
CORS_SUPPORTS_CREDENTIALS=true

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sparkyfit.ru
MAIL_FROM_NAME="SparkyFit"

# Storage Configuration
STORAGE_DRIVER=local
STORAGE_PATH=storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
RATE_LIMIT_WHITELIST=127.0.0.1

# Auto-Update Configuration
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_URL=https://updates.sparkyfit.ru/check
AUTO_UPDATE_SIGNATURE_PUBLIC_KEY=
AUTO_UPDATE_DOWNLOAD_PATH=storage/updates
AUTO_UPDATE_BACKUP_PATH=storage/backups
AUTO_UPDATE_MAX_BACKUP_COUNT=5

# AI Configuration
AI_ENABLED=true
AI_MODEL=llama3.2:3b
AI_OLLAMA_URL=http://localhost:11434
AI_MAX_CONTEXT_LENGTH=4096
AI_TEMPERATURE=0.7

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_DAYS=14

# Security Configuration
SECURITY_HASH_ROUNDS=12
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=900
SECURITY_SESSION_LIFETIME=7200

# Monitoring Configuration
ANALYTICS_ENABLED=false
MONITORING_ENABLED=false
SENTRY_DSN=

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sparkyfit
CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=sparkyfit

# External APIs
NUTRITION_API_KEY=
BARCODE_API_KEY=