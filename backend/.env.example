# Application Settings
APP_NAME="SparkyFit API"
APP_VERSION="1.0.0"
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=Europe/Moscow
APP_LOCALE=ru_RU

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sparkyfit
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE=3600
JWT_REFRESH_TOKEN_EXPIRE=2592000
JWT_ISSUER=sparkyfit.ru
JWT_AUDIENCE=sparkyfit.ru

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://sparkyfit.ru
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sparkyfit.ru
MAIL_FROM_NAME="SparkyFit"

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=../storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Auto-Update System
UPDATE_CHECK_URL=https://api.sparkyfit.ru/updates/check
UPDATE_DOWNLOAD_URL=https://api.sparkyfit.ru/updates/download
UPDATE_VERIFY_SSL=true
UPDATE_BACKUP_ENABLED=true
UPDATE_ROLLBACK_ENABLED=true

# AI Integration
AI_ENABLED=true
AI_PROVIDER=ollama
AI_API_URL=http://localhost:11434
AI_MODEL=llama2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily
LOG_PATH=../logs
LOG_MAX_FILES=14

# Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=base64:your-32-character-encryption-key
SESSION_LIFETIME=120
CSRF_TOKEN_EXPIRE=3600

# Monitoring & Analytics
ANALYTICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sparkyfit_
CACHE_DEFAULT_TTL=3600

# Queue Configuration (for background jobs)
QUEUE_DRIVER=redis
QUEUE_DEFAULT=default
QUEUE_RETRY_AFTER=90

# External APIs
NUTRITION_API_KEY=your-nutrition-api-key
EXERCISE_API_KEY=your-exercise-api-key
WEATHER_API_KEY=your-weather-api-key

# Social Media Integration
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Push Notifications
FIREBASE_SERVER_KEY=
FIREBASE_SENDER_ID=

# Development Settings
XDEBUG_MODE=debug
OPCACHE_ENABLE=false